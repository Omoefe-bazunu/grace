{
  "cli": {
    "version": ">= 16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      // ðŸ‘‡ ADD THIS SECTION to request an APK artifact
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true
      // This will build an AAB by default, which is correct for Play Store
    }
  },
  "submit": {
    "production": {}
  }
}
